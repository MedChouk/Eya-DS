      <li class="nav-item active">
        <a class="nav-link" href="{{path("car")}}"> Accueil <span class="sr-only">(current)</span></a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="{{path("addCar")}}">Ajouter Voiture</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="{{path("allCar")}}">Liste Voitures</a>
      </li>
    </ul>
      <form class="d-flex my-2 my-lg-0">
      <button class="btn btn-outline-dark" type="submit">
          <i class="fa-solid fa-cart-shopping"></i>
          Chariot
          <span class="badge bg-dark text-white ms-1 rounded-pill">0</span>
      </button>
      </form>
  </div>
</nav>
        {% block body %}{% endblock %}
    </body>
</html>
